

<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto; align-content: center;">
    <%= simple_form_for [@tractor, @booking], method: "post" do |f| %>
      <%= f.input :starting_date, as: :string, required: false, input_html: {id: "range_start"} %>
      <%= f.input :ending_date, as: :string, required: false, input_html: {id: "range_end"} %>
      <%= f.button :submit, "Book Now", class: "btn btn-success btn-position" %>
    <% end %>
  </div>
</div>
