<%= simple_form_for [@tractor, @booking] do |f| %>
  <div class="form-group row">
    <label for="example-datetime-local-input" class="col-2 col-form-label">Booking start</label>
    <div class="col-10">
      <%= f.input :starting_date, class: 'form-control', type: 'datetime', value: '2011-08-19T13:45:00' %>
      <!-- <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input"> -->
    </div>
  </div>
  <div class="form-group row">
    <label for="example-date-input" class="col-2 col-form-label">Booking end</label>
    <div class="col-10">
      <%= f.input :ending_date, class: 'form-control', type: 'date', value: '2011-08-19' %>
      <!-- <input class="form-control" type="date" value="2011-08-19" id="example-date-input"> -->
        <%= f.button :submit, 'Book', class: 'btn btn-link' %>
    </div>
  </div>
<% end %>
